<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="35sp"
        android:textColor="@color/colorOfapp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="Kronometre"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:text="Ders Seç:"
        />
    <Spinner
        android:id="@+id/spinnertheme"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:autofillHints="Ders Seç"
        
        android:gravity="center"
        android:backgroundTint="@color/colorOfapp"
        android:spinnerMode="dropdown" />






    <Chronometer
        android:textSize="80sp"
        android:id="@+id/chronometer"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Theme.DersAsistanı"
            android:text="Başlat" />

        <Button
            android:id="@+id/buttonstop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Theme.DersAsistanı"
            android:layout_marginLeft="20dp"
            android:text="Durdur" />



    </LinearLayout>

    <Button
        android:id="@+id/buttonkayitet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/Theme.DersAsistanı"
        android:text="Skoru Kaydet"
        android:visibility="gone" />


</LinearLayout>