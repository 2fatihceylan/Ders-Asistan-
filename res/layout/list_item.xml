<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow_drawable"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingRight="5dp"
        android:layout_weight=".10"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/imageviewrenk"
            android:layout_width="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:layout_height="20dp"
            android:layout_gravity="center"

            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".63"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewdedersinadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewicerik"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="TextView"
            android:textColor="#706F6F"

            android:textSize="16sp"
            />


        <TextView
            android:id="@+id/textViewtarih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706F6F"

            android:text="TextView"
            android:textSize="18sp" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/colorOfapp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".15"
        android:orientation="vertical">


        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/textViewbassaat"
            android:layout_width="50dp"
            android:layout_gravity="right"
            android:textColor="#706F6F"

            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/textViewbitsaat"
            android:layout_width="50dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:textColor="#706F6F"

            android:text="TextView"
            android:textSize="16sp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".10"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageviewalarm"
            android:layout_width="28dp"
            android:layout_marginTop="25dp"

            android:layout_height="28dp"
            android:layout_gravity="center" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".10"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageviewyap"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="30dp"

            android:layout_gravity="center"

            />

    </LinearLayout>



</LinearLayout>